grammar org.xtext.project.tdsl.TransfoDsl with org.eclipse.xtext.common.Terminals
//import "http://www.eclipse.org/emf/2002/Ecore" as ecore
import "http://org.xtext.project.tdsl.student" as sourcemetamodel
generate transfoDsl "http://www.xtext.org/project/tdsl/TransfoDsl"


Transformation:
	'transformation' name=ID '{'
	(srcmodel+=SrcModel)
	(layer+=Layer)+
	(targetmodel+=TrgModel)
	
'}'
;

TrgModel:
	'OUT' name=ID filepath=STRING
;
SrcModel:
	'IN' name=ID importURI=STRING ('conforms' sourcemetamodel=[sourcemetamodel::Student])
;
//SrcMetamodel:
	//eClass=[ecore::EPackage]
	//ePackage=[ecore::EPackage]
//;

QualifiedName:
	ID('.' ID)*
;
Layer:
	'apply' name=ID 
;


/*Operation:
	'Rename' | 'Remove' | 'Add'
	
;
Rename:
	 (entity=[Import]'.')
	;
Remove:
	(entity=[Import])
;
Add:
	(entity=[Import])
;

entity:
	'class' | 'Association' | 'Attribute'
;
*/




